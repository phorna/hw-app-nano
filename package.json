  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roosmaa/hw-app-xrb.git"
  },
  "bugs": {
    "url": "https://github.com/roosmaa/hw-app-xrb/issues"
  },
  "homepage": "https://github.com/roosmaa/hw-app-xrb#readme",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/Xrb.js",
  "scripts": {
